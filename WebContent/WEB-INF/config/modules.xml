<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" 
    "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
    <bean id="BackgroundKnowledgeCollectorModule" 
            class="de.uni_leipzig.simba.boa.backend.pipeline.module.backgroundknowledgecollector.impl.DefaultBackgroundKnowledgeCollectorModule">
            
        <property name="moduleDependencies">
            <set>
                <!-- none -->
            </set>
        </property>
        
        <property name="moduleSettings">
            <set>
                <value>sparqlQueryLimit</value>
                <value>dbpediaDefaultGraph</value>
                <value>dbpediaSparqlEndpoint</value>
                <value>backgroundKnowledgeOutputFilePath</value>
                <value>queryObjectProperties</value>
                <value>queryDatatypeProperties</value>
                <value>surfaceFormsTSV</value>
            </set>
        </property>
    </bean>
    
    <bean id="IndexingModule" 
            class="de.uni_leipzig.simba.boa.backend.pipeline.module.indexing.indexing.DefaultWikiIndexingModule">
        
        <property name="moduleDependencies">
            <set>
            </set>
        </property>
        
        <property name="moduleSettings">
            <set>
                <value>overwriteIndex</value>
                <value>ramBufferMaxSizeInMb</value>
                <value>indexSentenceDirectory</value>
                <value>rawSentenceDirectory</value>
            </set>
        </property>
    </bean>
</beans>